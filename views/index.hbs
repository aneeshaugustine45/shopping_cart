<section>
  <div class="container mt-5">
    <div class="row">
      {{#each produtcs}}
        <div class="col-md-6">
          <div class="card" style="width: 18rem;">
            <img
              class="card-img-top"
              src="/public/product-images/{{this._id}}.jpg"
              alt="Card image hi"
            />
            <div class="card-body">
              <h5 class="card-title">{{this.name}}</h5>
              <p class="card-text">{{this.description}}</p>
              <a href="#" class="btn btn-primary">add to cart</a>
            </div>
          </div>
        </div> 
      {{/each}}
    </div>
  </div>
</section>