<section>
  <div class="container mt-5">
    <div class="row">
      {{#each products}}
        <div class="col-md-4">
          <div class="card">
            <div class="row no-gutters">
              <div class="col-md-5">
                <img
                  class="card-img"
                  src="/product-images/{{this._id}}.jpg"
                  alt="Product Image"
                />
              </div>
              <div class="col-md-7">
                <div class="card-body">
                  <h5 class="card-title">{{this.name}}</h5>
                  <p class="card-text">{{this.description}}</p>
                  <h6 class="card-text">Price: rs {{this.price}}</h6>
                  <p class="card-text">{{this.category}}</p>
                  <button
                    onclick="addToCart('{{this._id}}')"
                    class="btn btn-primary"
                    id="btnadd"
                  >
                    Add To Cart
                  </button>
                </div>
              </div>
            </div>
          </div>
        </div>
      {{/each}}
    </div>
  </div>
</section>