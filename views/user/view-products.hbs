<div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">

  <ol class="carousel-indicators">
    <li
      data-target="#carouselExampleIndicators"
      data-slide-to="0"
      class="active"
    ></li>
    <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
    <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
  </ol>
  <div class="carousel-inner" style="max-height: 70%;">
     <div class="carousel-item active">
        <img
          class="d-block w-100"
          src="images/banner.jpg"
          alt="First slide"
        />
      </div>
    {{#each banner}}
      <div class="carousel-item">
        <img
          class="d-block w-100"
          src="banner-images/{{this._id}}.jpg"
          alt="slide banner"
        />
      </div>
    {{/each}}

  </div>

  <a
    class="carousel-control-prev"
    href="#carouselExampleIndicators"
    role="button"
    data-slide="prev"
  >
    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
    <span class="sr-only">Previous</span>
  </a>
  <a
    class="carousel-control-next"
    href="#carouselExampleIndicators"
    role="button"
    data-slide="next"
  >
    <span class="carousel-control-next-icon" aria-hidden="true"></span>
    <span class="sr-only">Next</span>
  </a>
</div>

<section>
  <div class="container mt-5">
    <div class="row">
      {{#each products}}
        <div class="col-md-6 mb-3">
          <div class="card">
            <div class="row no-gutters">
              <div class="col-md-5">
                <img
                  class="card-img"
                  src="/product-images/{{this._id}}.jpg"
                  alt="Product Image"
                  height="240px"
                  ;
                />
              </div>
              <div class="col-md-7">
                <div class="card-body">
                  <h5 class="card-title">{{this.name}}</h5>
                  <p class="card-text">{{this.description}}</p>
                  <h6 class="card-text">Price: rs {{this.price}}</h6>
                  <p class="card-text">{{this.category}}</p>
                  <button
                    onclick="addToCart('{{this._id}}')"
                    class="btn btn-success"
                    id="btnadd"
                  >
                    Add To Cart
                  </button>
                  <button
                    onclick="addToCart('{{this._id}}')"
                    class="btn btn-warning"
                    id="btnadd"
                  >
                    Buy Now
                  </button>
                </div>
              </div>
            </div>
          </div>
        </div>
      {{/each}}
    </div>
  </div>
</section>