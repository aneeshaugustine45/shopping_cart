<section>
  <div class="container">
    <div class="row mt-3">
      <a href="/admin/add-product" class="btn btn-success ml-auto mb-3">add
        products</a>
    </div>
    <table class="table mt-5" id="product-table">
      <thead>
        <tr>
          {{!           <th scope="col">No:</th>
 }}
          <th scope="col">titile</th>
          <th scope="col">category</th>
          <th scope="col">price</th>

          <th scope="col">description</th>
          <th scope="col">image</th>
          <th>options</th>
        </tr>
      </thead>
      <tbody>
        {{#each produtcs}}
          <tr>
            {{!             <th scope="row">1</th>
 }}
            <td>{{this.name}}</td>
            <td>{{this.category}}</td>
            <td>{{this.price}}</td>
            <td>{{this.description}}</td>

            <td><img
                style="width: 50px; height:50px"
                src="/product-images/{{this._id}}.jpg"
                alt="{{this.name}}"
              />
            </td>

            <td>
              <a
                href="/admin/edit-product/{{this._id}}"
                class="btn btn-primary"
              >Edit</a>
              <a
                href="/admin/delete-product/{{this._id}}"
                class="btn btn-danger"
                onclick="return confirm('are you want to delete {{this.name}}')"
              >Delete</a>
            </td>
          </tr>
        {{/each}}
      </tbody>
    </table>
  </div>
</section>
<script>
  $(document).ready( function () { $('#product-table').DataTable(); } );

</script>